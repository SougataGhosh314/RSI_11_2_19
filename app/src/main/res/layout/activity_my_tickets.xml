<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyTickets">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/delete_tickets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000"
            android:text="Delete Tickets"
            android:textStyle="bold"
            android:textColor="#F7D00C"
            android:textSize="16dp"
            android:visibility="gone"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/ticket_view_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12">

        </android.support.v7.widget.RecyclerView>

        <TextView
            android:visibility="gone"
            android:id="@+id/empty_ticket_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="You are Yet to Book a Ticket"
            android:textSize="24dp"
            android:textStyle="bold"
            android:gravity="center"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>